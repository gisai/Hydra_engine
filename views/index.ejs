<!DOCTYPE html>
<html>
	<%- include('head', {name:name}) -%>
	<body>
		<%- include('navbar', {name:name}) -%>
		<div class="container" id="container">
      <div class="starter-template">
        <h1>Select scene</h1>
        <div class="table-responsive">
          <table class="table table-hover" id="scenes">
            <thead>
              <tr>
                <th>Scene</th>
                <th>Description</th>
                <th>Edit</th>
              </tr>
            </thead>
            <tbody>
              <% scenes.forEach(function(scene){ %>
              	<tr class="clickable_row">
	                <td><%= scene.name%></td>
	                <td><%= scene.description%></td>
	                <td class="edit_scene"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></th>
	              </tr>
							<% }); %>
            </tbody>
          </table>
        </div>
      </div>
    </div><!-- /.container -->
		<%- include('scripts') -%>
	</body>
</html>